<?xml version="1.0" encoding="utf-8"?>
<com.onurcan.pangolin.helpers.SingleHeaderView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    tools:background="@color/darkPurple_Navigation">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/s_image"
        android:layout_width="48dp"
        android:layout_height="33dp"
        android:background="@drawable/ic_champion"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingTop="10dp"
        android:paddingBottom="2dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        tools:src="@drawable/ic_profile" />

    <TextView
        android:id="@+id/s_last_seen"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:fontFamily="@font/bree_serif"
        android:singleLine="true"
        android:textColor="@android:color/white"
        tools:text="@string/app_name" />

    <ImageButton
        android:id="@+id/s_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:contentDescription="@string/call"
        android:src="@drawable/ic_call" />

</com.onurcan.pangolin.helpers.SingleHeaderView>